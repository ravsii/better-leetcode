{
  "name": "better-leetcode",
  "displayName": "Better Leetcode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "type": "commonjs",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Better Leetcode",
        "properties": {
          "betterLeetcode.storePath": {
            "type": "string",
            "default": "$HOME/.leetcode",
            "description": "Where local leetcode file will be stored",
            "scope": "application"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "betterLeetcode.signIn",
        "title": "Sign In",
        "category": "Better Leetcode"
      },
      {
        "command": "betterLeetcode.signOut",
        "title": "Sign Out",
        "category": "Better Leetcode"
      },
      {
        "command": "betterLeetcode.refreshProblems",
        "title": "Refresh",
        "icon": "$(extensions-refresh)",
        "category": "Better Leetcode"
      },
      {
        "command": "betterLeetcode.previewProblem",
        "title": "Preview Problem",
        "category": "LeetCode"
      },
      {
        "command": "betterLeetcode.openProblem",
        "title": "Open Problem",
        "category": "LeetCode"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "betterLeetcode",
          "title": "Better Leetcode",
          "icon": "resources/menu.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "betterLeetcodeNotSignedIn",
        "contents": "It seems like you're not signed in or your session is expired\n[Sign in](command:betterLeetcode.signIn)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "betterLeetcode.refreshProblems",
          "when": "view == betterLeetcodeProblems",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "betterLeetcode.openProblem",
          "when": "view == betterLeetcodeProblems && viewItem == problem"
        }
      ]
    },
    "views": {
      "betterLeetcode": [
        {
          "id": "betterLeetcodeNotSignedIn",
          "name": "Sign in",
          "when": "!betterLeetcode.signedIn"
        },
        {
          "id": "betterLeetcodeProblems",
          "name": "Problems",
          "when": "betterLeetcode.signedIn"
        },
        {
          "id": "betterLeetcodeStats",
          "name": "Statistics",
          "visibility": "collapsed",
          "when": "betterLeetcode.signedIn"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-js": "^1.7.0",
    "@types/markdown-it": "^13.0.7",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.28",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "markdown-it": "^14.0.0",
    "node-html-markdown": "^1.3.0",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "typescript": "^5.4.2"
  }
}
